@using EntityLayer.Concrete
@model List<Branch>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

 <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Branşlar</h4>
                   
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Branş</th>
                          <th>Sil</th>
                          <th>Düzenle</th>
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                      {
                                               
                        <tr>
                          <td>@item.BranchID</td>
                          <td>@item.Name</td>
                          <td><a href="/Branch/DeleteBranch/@item.BranchID" class="btn btn-danger">Sil</a></td>
                          <td><a href="/Branch/UpdateBranch/@item.BranchID" class="btn btn-success">Düzenle</a></td>
                        </tr>
               
                      }
                      </tbody>
                    </table>
                    <br/>
                    <a href="/Branch/AddBranch/" class="btn btn-primary">Yeni Branş Girişi</a>
                  </div>
                </div>
              </div>



