@using EntityLayer.Concrete
@model List<Announcement>

@if (!User.IsInRole("Admin"))
{

    <li class="nav-item dropdown">
        <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="mdi mdi-email-outline"></i>
            <span class="count-symbol bg-warning"></span>
        </a>
        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
            <h6 class="p-3 mb-0">Son Duyurular</h6>
            @foreach (var item in Model)
            {
                <div class="dropdown-divider"></div>
                <a class="dropdown-item preview-item" href="/Announcement/AnnouncementDetails/@item.AnnouncementID">                  
                    <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                        <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.AnnouncementTopic</h6>
                        <p class="text-gray mb-0"> @item.Date </p>
                    </div>
                </a>
            }
            <div class="dropdown-divider"></div>
                <h6 class="p-3 mb-0 text-center"> @Model.Count Yeni Duyuru</h6>
              </div>
            </li>
            }