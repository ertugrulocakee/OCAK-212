@using EntityLayer.Concrete
@model List<Hospital>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

   <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Hastaneler</h4>
                   
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Hastane</th>
                          <th>Sil</th>
                          <th>Düzenle</th>
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                      {
                                               
                        <tr>
                          <td>@item.HospitalID</td>
                          <td>@item.Name</td>
                          <td><a href="/Hospital/DeleteHospital/@item.HospitalID" class="btn btn-danger">Sil</a></td>
                          <td><a href="/Hospital/UpdateHospital/@item.HospitalID" class="btn btn-success">Düzenle</a></td>
                        </tr>
               
                      }
                      </tbody>
                    </table>
                    <br/>
                    <a href="/Hospital/AddHospital/" class="btn btn-primary">Yeni Hastane Girişi</a>
                  </div>
                </div>
              </div>

