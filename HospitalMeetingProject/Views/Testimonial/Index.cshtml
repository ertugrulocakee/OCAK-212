@using EntityLayer.Concrete
@model List<Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Referanslar</h4>
                   
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Referansım</th>
                          <th>Sil</th>
                          <th>Düzenle</th>
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                      {
                                               
                        <tr>
                          <td>@item.testimonialID</td>
                            @if (item.description.Length > 25)
                            {
                                <td>@item.description.Substring(0,25)...</td>
                            }
                            else{
                              <td>@item.description</td>
                    
                            }
                          <td><a href="/Testimonial/RemoveTestimonial/@item.testimonialID" class="btn btn-danger">Sil</a></td>
                          <td><a href="/Testimonial/UpdateTestimonial/@item.testimonialID" class="btn btn-success">Düzenle</a></td>
                        </tr>
               
                      }
                      </tbody>
                    </table>
                    <br/>
                    <a href="/Testimonial/AddTestimonial/" class="btn btn-primary">Yeni Referans Ekle</a>
                  </div>
                </div>
              </div>




