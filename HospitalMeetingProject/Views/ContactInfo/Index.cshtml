@using EntityLayer.Concrete
@model ContactInfo

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert('@ViewBag.Message');
        };
    </script>
}


 <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">İletişim Bilgisi Düzenle</h4>
                 
                @using (Html.BeginForm("Index","ContactInfo",FormMethod.Post)){

                                  
                    @Html.HiddenFor(m=>m.id)

                    <div class="form-group">
                      <label>Merkez Yerleşkenin Yer Adresi</label>
                      @Html.TextBoxFor(m=>m.address,new {@class="form-control"}) 
                      @Html.ValidationMessageFor(m=>m.address,"",new {@class="text-danger"})
                    </div>

                     <div class="form-group">
                      <label>OCAK 212 E-posta Adresi</label>
                      @Html.TextBoxFor(m=>m.email,new {@class="form-control"}) 
                      @Html.ValidationMessageFor(m=>m.email,"",new {@class="text-danger"})
                    </div>


                  <div class="form-group">
                      <label>OCAK 212 Telefon Numarası</label>
                      @Html.TextBoxFor(m=>m.phone,new {@class="form-control"}) 
                      @Html.ValidationMessageFor(m=>m.phone,"",new {@class="text-danger"})
                    </div>
                

                  <button  class="btn btn-success">Düzenle</button>
            

            }


                  </div>
                </div>
              </div>



