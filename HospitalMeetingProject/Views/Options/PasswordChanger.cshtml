@model HospitalMeetingProject.Models.PasswordChangeViewModel

@{
    ViewData["Title"] = "PasswordChanger";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Şifre Değiştir</h4>
                 
                @using (Html.BeginForm("PasswordChanger","Options",FormMethod.Post)){

                                    
                    <div class="form-group">
                      <label>Şifre</label>
                      @Html.PasswordFor(m=>m.Password,new {@class="form-control"}) 
                      @Html.ValidationMessageFor(m=>m.Password,"",new {@class="text-danger"})
                    </div>
                
                    <div class="form-group">
                      <label>Tekrar Şifre</label>
                      @Html.PasswordFor(m=>m.ConfirmPassword,new {@class="form-control"}) 
                      @Html.ValidationMessageFor(m=>m.ConfirmPassword,"",new {@class="text-danger"})
                    </div>
                

                  <button  class="btn btn-success">Şifre Güncelle</button>
            

            }


                  </div>
                </div>
              </div>





