@using EntityLayer.Concrete
@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

 <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Gelen İletişim Mesajları</h4>
                   
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Ad-Soyad</th>
                          <th>E-posta</th>
                          <th>Konu</th>
                          <th>Detay</th>
                          <th>Sil</th>
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                      {
                                               
                        <tr>
                          <td>@item.id</td>
                          <td>@item.Name</td>
                          <td>@item.Email</td>
                          <td>@item.Subject</td>
                          <td><a href="/Message/MessageDetail/@item.id" class="btn btn-success">Detaya Bak</a></td>
                          <td><a href="/Message/DeleteMessage/@item.id" class="btn btn-danger">Sil</a></td>
                        </tr>
               
                      }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>




