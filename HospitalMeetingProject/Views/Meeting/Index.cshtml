@using EntityLayer.Concrete
@model List<Meeting>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


 <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Aktif Randevular</h4>
                   
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Tarih</th>
                          <th>Hastane</th>
                          <th>Doktor</th>
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                      {
                                               
                        <tr>
                          <td>@item.MeetingID</td>
                          <td>@item.Date</td>
                          <td>@item.Hospital.Name</td>
                          <td>@item.DoctorName</td>
                          
                     @*     <td><a href="/Hospital/DeleteHospital/@item.HospitalID" class="btn btn-danger">Sil</a></td>*@
                         
                        </tr>
               
                      }
                      </tbody>
                    </table>
                    <br/>
                    <a href="/Meeting/AddMeeting/" class="btn btn-primary">Yeni  Randevu Talebi</a>
                  </div>
                </div>
              </div>


