@using EntityLayer.Concrete
@model List<HospitalInfo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

 <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Hastane Bilgileri</h4>
                   
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Hastane</th>
                          <th>Detaya Bak</th>
                          <th>Sil</th>
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                      {
                                               
                        <tr>
                          <td>@item.id</td>
                          <td>@item.Hospital.Name</td>
                          <td><a href="/HospitalInfo/HospitalDetail/@item.id" class="btn btn-success">Detaya Bak</a></td>
                          <td><a href="/HospitalInfo/DeleteHospitalInfo/@item.id" class="btn btn-danger">Sil</a></td>
                        </tr>
               
                      }
                      </tbody>
                    </table>
                    <br/>
                    <a href="/HospitalInfo/AddHospitalInfo/" class="btn btn-primary">Yeni Hastane Bilgisi Girişi</a>
                  </div>
                </div>
              </div>



