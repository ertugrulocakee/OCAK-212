@model HospitalMeetingProject.Areas.MainPage.Models.HospitalInfoViewModel

@{
    ViewData["Title"] = "AddHospitalInfo";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert('@ViewBag.Message');
        };
    </script>
}  


     <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Hastane Bilgisi Ekle</h4>
                 
                @using (Html.BeginForm("AddHospitalInfo","HospitalInfo",FormMethod.Post ,new { enctype = "multipart/form-data" })){


                    <div class="form-group">
                      <label>Hastane</label>
                      @Html.DropDownListFor(m=>m.HospitalID,(List<SelectListItem>) ViewBag.Hospital ,new {@class="form-control"})                      
                    </div>

                                    
                    <div class="form-group">
                      <label>Hastane Açıklaması</label>
                      @Html.TextAreaFor(m=>m.description,6,10,new {@class="form-control"}) 
                      @Html.ValidationMessageFor(m=>m.description,"",new {@class="text-danger"})
                    </div>
                

                    <div class="form-group">
                      <label>Hastane Resimini Seç</label>
                       @Html.TextBoxFor(m => m.hospitalImage, new { type = "file" })
                       @Html.ValidationMessageFor(m => m.hospitalImage,"",new {@class="text-danger"})
            
                    </div>


                  <button  class="btn btn-success">Ekle</button>
            

            }


                  </div>
                </div>
              </div>


