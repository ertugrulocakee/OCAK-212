@using EntityLayer.Concrete
@model About


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert('@ViewBag.Message');
        };
    </script>
}


 <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Hakkımda Düzenle</h4>
                 
                @using (Html.BeginForm("Index","About",FormMethod.Post)){

                                  
                    @Html.HiddenFor(m=>m.id)

                    <div class="form-group">
                      <label>Üst Yazı</label>
                      @Html.TextAreaFor(m=>m.topWriting,4,8,new {@class="form-control"}) 
                      @Html.ValidationMessageFor(m=>m.topWriting,"",new {@class="text-danger"})
                    </div>

                     <div class="form-group">
                      <label>Sağ Yazı</label>
                      @Html.TextAreaFor(m=>m.rightWriting,8,10,new {@class="form-control"}) 
                      @Html.ValidationMessageFor(m=>m.rightWriting,"",new {@class="text-danger"})
                    </div>


             
                  <button  class="btn btn-success">Düzenle</button>
            
            }


                  </div>
                </div>
              </div>




